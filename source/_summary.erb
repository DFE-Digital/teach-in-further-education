<% breakpoints = [
  { :media_query => "(min-width:960px)", :width => 150 },
  { :media_query => "(min-width:640px)", :width => 150 },
  { :media_query => "(max-width:640px)", :width => 150 }
] %>

<div id="<%= data.id %>" class="app-summary">
  <% if !data.icon.nil? %>
    <div style="text-align: center; padding-bottom: 20px">
      <%= partial "image", :locals => { :data => data.icon, :breakpoints => breakpoints } %>
    </div>
  <% end %>
  <h4 class="govuk-heading-s"><%= data.title %></h4>
  <div>
    <% if !data.information_body.nil? %>
      <%= markdown(data.information_body) %>
    <% end %>
  </div>
</div>