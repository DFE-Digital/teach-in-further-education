<% if data.cta_type == "Start" %>
  <a href="<%= data.slug %>" role="button" draggable="false" className="govuk-button govuk-button--start" data-module="govuk-button">
    <%= data.title %>
    <svg className="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19"
         viewBox="0 0 33 40" aria-hidden="true" focusable="false">
      <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"/>
    </svg>
  </a>
<% else %>
  <% classMap = {
    :start => "",
    :primary => "",
    :secondary => "govuk-button--secondary",
    :warning => "govuk-button--warning"
  } %>

  <a href="<%= data.slug %>" class="<% "govuk-button " + classMap[data.cta_type.downcase] %>" data-module="govuk-button">
    <%= data.title %>
  </a>
<% end %>